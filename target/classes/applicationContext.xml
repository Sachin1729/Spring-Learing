<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="userName" class="com.pojo.Employee">
		<property name="userName" value="Sachin"></property>
	</bean>

	<bean id="userName2" class="com.pojo.Employee">
		<property name="userName" value="Nan Magand"></property>
	</bean>



	<bean id="address" class="com.pojo.Address">
		<constructor-arg value="Bommanahalli"></constructor-arg>
		<constructor-arg value="Bengaluru"></constructor-arg>
		<constructor-arg value="560068" type="int"></constructor-arg>
	</bean>

	<bean id="emp" class="com.pojo.Employee">
		<constructor-arg value="Sac"></constructor-arg>
		<constructor-arg value="10" type="int"></constructor-arg>
		<!-- <constructor-arg> <ref bean="address" /> </constructor-arg> -->
	</bean>

	<bean id="emp2" class="com.pojo.Employee" parent="emp">
		<constructor-arg>
			<ref bean="address" />
		</constructor-arg>
	</bean>
	
	
